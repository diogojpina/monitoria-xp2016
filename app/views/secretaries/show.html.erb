<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.secretary.name') + ':' %></strong>
  <%= @secretary.name %>
</p>

<p>
  <strong><%= t('activerecord.attributes.secretary.nusp') + ':' %></strong>
  <%= @secretary.nusp %>
</p>

<p>
  <strong><%= t('activerecord.attributes.secretary.email') + ':' %></strong>
  <%= @secretary.email %>
</p>

<% if secretary_signed_in? and current_secretary == @secretary %>
  <p>
    <%= link_to 'Editar', edit_secretary_path(@secretary) %>
  </p>
  <p>
      <%= link_to 'Mudar senha', change_secretary_password_path(@secretary) %>
  </p>
<% end %>
<% if admin_signed_in? %>
  <p>
    <%= link_to 'Remover', @secretary, method: :delete, data: { confirm: 'Tem certeza?' } %>
  </p>
<% end %>
