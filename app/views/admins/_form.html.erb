<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "erro impediu", "erros impediram") %> esse admin de ser salvo:</h3>

      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :email, t('activerecord.attributes.admin.email') %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, t('activerecord.attributes.admin.password') %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t('activerecord.attributes.admin.password_confirmation') %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
