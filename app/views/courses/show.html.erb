<p>
  <strong><%= t('activerecord.attributes.course.course_code') + ':' %></strong>
  <%= @course.course_code %>
</p>

<p>
<strong><%= t('activerecord.attributes.course.name') + ':' %></strong>
  <%= @course.name %>
</p>

<% if admin_signed_in? || (current_professor.present? && current_professor.super_professor?) %>
  <p>
    <%= link_to 'Editar', edit_course_path(@course) %>
    <%= link_to 'Remover', course_path(@course), method: :delete, data: { confirm: 'Tem certeza?' } %>
  </p>
<% end %>
